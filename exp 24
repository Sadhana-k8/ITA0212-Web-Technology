      background: url("https://media.giphy.com/media/3oEjI6SIIHBdRxXI40/giphy.gif") center/cover no-repeat;
      opacity: 0.25; /* soft overlay */
      z-index: -1;
    }

    .container {
      position: relative;
      top: 40%;
      transform: translateY(-50%);
      animation: fadeIn 3s ease-in-out;
    }

    h1 {
      font-size: 3em;
      margin: 0;
      background: linear-gradient(90deg, #ff6ec4, #7873f5, #4ade80, #facc15);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      animation: glow 2s infinite alternate;
    }

    p {
      font-size: 2em;
      margin-top: 20px;
      color: #f0f0f0;
      animation: bounce 2s infinite;
    }

    /* Animations */
    @keyframes glow {
      from { text-shadow: 0 0 10px #fff; }
      to { text-shadow: 0 0 30px #ff6ec4, 0 0 60px #7873f5; }
