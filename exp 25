<body>
  <h1>üé® String Object Operations Demo</h1>
  <div class="container">
    <label>Enter a string: </label>
    <input type="text" id="mainString" placeholder="Type your string here">
    <br>
    <label>Index: </label>
    <input type="number" id="index" placeholder="Enter index">
    <br>
    <button onclick="getChar()">Get Character at Index</button>
    <button onclick="getUnicode()">Get Unicode at Index</button>
    <button onclick="joinStrings()">Join Strings</button>
    <button onclick="unicodeToChar()">Unicode ‚û°Ô∏è String</button>
    <button onclick="toUpperCase()">Convert to UPPERCASE</button>
    <div class="result" id="output"></div>
  </div>

  <script>
    function getChar() {
      let str = document.getElementById("mainString").value;
      let idx = document.getElementById("index").value;
      document.getElementById("output").innerText = 
        "Character at index " + idx + " ‚û°Ô∏è " + str.charAt(idx);
    }

    function getUnicode() {
      let str = document.getElementById("mainString").value;
      let idx = document.getElementById("index").value;
      document.getElementById("output").innerText = 
        "Unicode at index " + idx + " ‚û°Ô∏è " + str.charCodeAt(idx);
    }

    function joinStrings() {
      let str1 = document.getElementById("mainString").value;
      let str2 = prompt("Enter another string to join:");
      let joined = str1.concat(" ", str2);
      document.getElementById("output").innerText = 
        "Joined String ‚û°Ô∏è " + joined;
    }

    function unicodeToChar() {
      let code = prompt("Enter a Unicode value (e.g. 65):");
      let char = String.fromCharCode(code);
      document.getElementById("output").innerText = 
        "Unicode " + code + " ‚û°Ô∏è " + char;
    }

    function toUpperCase() {
      let str = document.getElementById("mainString").value;
      document.getElementById("output").innerText = 
        "Uppercase ‚û°Ô∏è " + str.toUpperCase();
    }
  </script>
</body>
