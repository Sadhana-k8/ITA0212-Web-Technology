    <meta charset="UTF-8">
    <title>CSS Types Demo</title>

    <!-- External CSS File -->
    <link rel="stylesheet" href="styles.css">

    <!-- Internal CSS -->
    <style>
        section {
            background: linear-gradient(135deg, #ff9a9e, #fad0c4);
            padding: 25px;
            margin: 20px;
            border-radius: 20px;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
        }

        section h2 {
            color: #6a1b9a;
            text-align: center;
            text-shadow: 0 0 10px white;
        }

        section p {
            font-size: 16px;
            text-align: justify;
            color: #333;
        }
    </style>
</head>
<body>

    <!-- Header uses EXTERNAL CSS -->
    <header>
