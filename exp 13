        <a href="#">Contact</a>
    </nav>

    <!-- Section uses INTERNAL CSS -->
    <section>
        <h2>Internal Style Sheet</h2>
        <p>
            This section is styled using <b>Internal CSS</b> defined inside the
            &lt;style&gt; tag within the HTML document.
        </p>

        <!-- Inline CSS -->
        <p style="color: #d50000; font-weight: bold; font-size: 18px;">
            ‚≠ê This paragraph uses INLINE CSS ‚≠ê
        </p>

        <!-- Inline CSS Button -->
        <button style="
            background: linear-gradient(to right, #00c853, #b2ff59);
            color: black;
            padding: 12px 25px;
            border: none;
            border-radius: 25px;
            font-size: 16px;
            cursor: pointer;
            box-shadow: 0 0 15px #00e676;">
            Click Me
        </button>
    </section>

    <!-- Footer uses EXTERNAL CSS -->
    <footer>
