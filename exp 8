<body>
    <div class="container">
        <h1>JavaScript Number Operations</h1>
        <p id="exponential" class="output"></p>
        <p id="decimal" class="output"></p>
        <p id="toString" class="output"></p>
        <p id="negInfinity" class="output"></p>
        <button onclick="performOperations()">Show Results</button>
    </div>

    <script>
        function performOperations() {
            let num = 5.6789;

            // 1. Exponential value
            let expValue = num.toExponential();
            document.getElementById('exponential').innerHTML = `Exponential value of ${num}: ${expValue}`;

            // 2. Limit the number of digits after decimal (2 digits)
            let fixedValue = num.toFixed(2);
            document.getElementById('decimal').innerHTML = `Value of ${num} with 2 decimal digits: ${fixedValue}`;

            // 3. Convert number to string
            let strValue = num.toString();
            document.getElementById('toString').innerHTML = `Number ${num} converted to string: "${strValue}"`;

            // 4. Return negative infinity
            let negInf = Number.NEGATIVE_INFINITY;
            document.getElementById('negInfinity').innerHTML = `Negative Infinity: ${negInf}`;
        }
    </script>
</body>
